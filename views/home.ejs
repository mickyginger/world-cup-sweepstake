<% if(selectionMade) { %>

  <ul class="columns is-multiline">
    <% users.forEach(user => { %>
      <li class="column is-one-quarter">
        <div class="card">
          <div class="card-header">
            <h3 class="card-header-title">
              <%= user.name %>

              <% if(user.paid) { %>
                <small>Paid</small>
              <% } else { %>
                <small class="is-danger">Not paid</small>
              <% } %>
            </h3>
          </div>
          <div class="card-content">
            <h2 class="title is-1 is-flag"><%= user.country.flag %></h2>
            <h3 class="subtitle is-4"><%= user.country.name %> (<%= user.country.rank %>)</h3>
          </div>
        </div>
      </li>
    <% }) %>
  </ul>
<% } else { %>

  <h1 class="title is-1">🇷🇺 World Cup 2018 Sweepstake ⚽️</h1>
  <h2 class="subtitle is-2">Please register to take part</h2>
  <hr />
  <p>The draw will be made at 5pm Monday 18th June</p>
  <hr />
  <a class="button is-primary" href="/register">Register</a>

<% } %>
